<div class='{{ isResponsive ? "table-responsive-md" }}'>
  <table{{ attributes.defaults({ class: this.getSmall  ~ this.getStriped ~ this.getBordered ~ 'table table-hover'}) }} >
    {% if hasHeader %}
    <thead class='thead-light'>
      <tr>{% block header_rows%}{% endblock %}</tr>
    </thead>
    {% endif %}
    <tbody>
      {% block content%}{% endblock %}
    </tbody>
  </table>
</div>
